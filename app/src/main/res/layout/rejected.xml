<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/accepted"
    android:layout_width="350dp"
    android:layout_height="250dp"
    android:layout_gravity="center"
    app:cardCornerRadius="10dp"
    android:backgroundTint="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTintMode="screen"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/close_builders"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_close_24" />


        <TextView
            android:id="@+id/tv_namaDriver"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="50dp"
            android:ems="10"
            android:fontFamily="@font/poppins_semibold"
            android:inputType="textLongMessage"
            android:text="Nama Driver  : "
            android:textColor="@color/biru"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/namaDriver"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/poppins_semibold"
            android:inputType="textLongMessage"
            android:text="IPIK"
            android:textColor="@color/biru"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_namaDriver"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_namaDriver"
            app:layout_constraintTop_toTopOf="@+id/tv_namaDriver" />

        <EditText
            android:id="@+id/penolak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Alasan Ditolak"
            android:textColorHint="@color/colorPrimary"
            android:inputType="textLongMessage"
            android:layout_marginHorizontal="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_namaDriver"
            app:layout_constraintVertical_bias="0.181"
            tools:layout_editor_absoluteX="0dp" />



        <Button
            android:id="@+id/save_builders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/red"
            android:text="Simpan"
            app:layout_constraintEnd_toEndOf="@+id/penolak"
            app:layout_constraintStart_toStartOf="@+id/penolak"
            app:layout_constraintTop_toBottomOf="@+id/penolak" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>